<div class="container-fluid">
  <div class="row">
    <!-- Left Side-Bar -->
    <div class="col-sm-4 col-md-3">
      <div class="team-sidebar">
        <h2>Los Angeles Clippers</h2>
        <a href="http://www.clippers.com/" target="_blank">Official Team Site</a> <br>
        <a href="http://www.clippers.com/roster" target="_blank">Team Roster</a> <br>
        <a href="http://www.staplescenter.com/" target="_blank">Stadium</a> <br>
        <a href="http://instagram.com/laclippers" target="_blank"> <i class="fa fa-instagram fa-lg"></i></a> 
        <a href="http://twitter.com/laclippers" target="_blank"> <i class="fa fa-twitter fa-lg"></i></a>       
        <a href="https://plus.google.com/+laclippers/" target="_blank"> <i class="fa fa-google-plus fa-lg"></i></a>    
        <a href="http://www.facebook.com/laclippers" target="_blank"> <i class="fa fa-facebook fa-lg"></i></a>    
        <a href="http://www.pinterest.com/laclippers/" target="_blank"> <i class="fa fa-pinterest fa-lg"></i></a>         
        <a href="http://www.youtube.com/user/clippers1970" target="_blank"> <i class="fa fa-youtube fa-lg"></i></a>         
        <a href="http://www.linkedin.com/company/los-angeles-clippers" target="_blank"> <i class="fa fa-linkedin fa-lg"></i></a>  
      </div>

      <div class="twitter">   
        <h3><i class="fa fa-twitter fa-lg"></i> Recent Team Tweets </h3>
        <% @twitter.each do |tweet| %>
          <p>
            <a href="http://www.twitter.com/<%= tweet.user.screen_name %>/status/<%= tweet.id %>" target="_blank"><%= tweet.text %></a>  
            <span class="timestamp">(<%= tweet.created_at.strftime('%m/%d/%Y, %l:%M%p') %>)</span>
          </p>
        <% end %>
      </div>

      <div class="twitter">   
        <h3><i class="fa fa-twitter fa-lg"></i> Recent Player Tweets </h3>
        <% @kobe.each do |tweet| %>
          <p>
            <%= tweet.user.screen_name.capitalize %>: 
            <a href="http://www.twitter.com/<%= tweet.user.screen_name %>/status/<%= tweet.id %>" target="_blank"><%= tweet.text %></a>  
            <span class="timestamp">(<%= tweet.created_at.strftime('%m/%d/%Y, %l:%M%p') %>)</span>
          </p>
        <% end %>
      </div>
    </div>
    
