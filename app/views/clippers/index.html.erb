          <!-- TODO: Refactor this! -->
          <% @clippers.each do |story| %>
            <div class="story">

              <!-- Image, if available -->
              <% if story.image %>
                <img src="<%= story.image %>" alt="" class="story-image">
              <% end %>

              <a href="<%= story.url %>" target="_blank"> <%= story.title %> </a> 
              <span class="timestamp"> (<%= story.published.strftime('%m/%d/%Y, %l:%M%p')%>) </span>

              <!-- Check if new -->
              <% if story.published.strftime("%-m/%-d") == Date.today.strftime("%-m/%-d") %> 
                <span class="new"> <%= "New!" %> </span>
              <% end %>

            </div>
          <% end %>
        </div>

